<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.TextArea?>
<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.so.Algorithms.Controller">
    <left>
        <AnchorPane prefHeight="340.0" prefWidth="140.0" style="-fx-border-color: lightgray; -fx-border-radius: 6px;">
            <children>
                <RadioButton id="1" fx:id="radioButton1" layoutX="20.0" layoutY="40.0" mnemonicParsing="false" onAction="#FCFS" text="FCFS">
                    <toggleGroup>
                        <ToggleGroup fx:id="algorithms" />
                    </toggleGroup>
                </RadioButton>
                <RadioButton id="2" disable="true" fx:id="radioButton2" layoutX="20.0" layoutY="60.0" mnemonicParsing="false" onAction="#SJF" text="SJF" toggleGroup="$algorithms" />
                <RadioButton id="3" disable="true" fx:id="radioButton3" layoutX="20.0" layoutY="80.0" mnemonicParsing="false" onAction="#Rotacyjny" text="Rotacyjny" toggleGroup="$algorithms" />
                <Label layoutX="23.0" layoutY="15.0" text="Wybierz algorytm:" />
                <Separator layoutX="10.0" layoutY="105.0" prefHeight="5.0" prefWidth="120.0" />
                <Label layoutX="23.0" layoutY="115.0" text="Ilość procesów:" />
                <Spinner fx:id="quantitySpinner" editable="true" initialValue="10" layoutX="20.0" layoutY="135.0" max="10000" min="1" prefHeight="20.0" prefWidth="100.0" />
                <Label layoutX="23.0" layoutY="165.0" text="Maksymalna" wrapText="true" />
                <Label layoutX="23.0" layoutY="180.0" text="długość procesu:" wrapText="true" />
                <Spinner fx:id="maxLegthOfProcessSpinner" editable="true" initialValue="5" layoutX="20.0" layoutY="200.0" max="50" min="1" prefHeight="20.0" prefWidth="100.0" />
                <Label layoutX="23.0" layoutY="230.0" text="Maksymalny" wrapText="true" />
                <Label layoutX="23.0" layoutY="245.0" text="moment zgłoszenia:" wrapText="true" />
                <Spinner fx:id="rangeOfCallsSpinner" editable="true" initialValue="10" layoutX="20.0" layoutY="265.0" max="10000" min="1" prefHeight="20.0" prefWidth="100.0" />
                <Button fx:id="runButton" layoutX="10.0" layoutY="320.0" mnemonicParsing="false" onAction="#run" prefHeight="25.0" prefWidth="120.0" text="Wykonaj symulację" />
            </children>
            <opaqueInsets>
                <Insets left="10.0" top="100.0" />
            </opaqueInsets>
        </AnchorPane>
    </left>
    <bottom>
        <ProgressBar depthTest="ENABLE" prefHeight="20.0" prefWidth="560.0" progress="0.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="20.0" top="20.0" />
            </BorderPane.margin>
        </ProgressBar>
    </bottom>
    <opaqueInsets>
        <Insets />
    </opaqueInsets>
    <right>
        <TextArea fx:id="textArea" editable="false" prefHeight="340.0" prefWidth="460.0" style="-fx-border-color: lightgray; -fx-border-radius: 6px;">
            <font>
                <Font size="12" />
                <Font name="Courier New" />
            </font>
        </TextArea>
    </right>
</BorderPane>